<IfModule mod_rewrite.c>
    Options -MultiViews
    RewriteEngine On
    
    # --- DÒNG QUAN TRỌNG NHẤT CẦN SỬA ---
    # Thay vì để "/" (gốc server), hãy để đường dẫn tới thư mục public của dự án
    RewriteBase /php_crud/public/
    
    # Nếu không phải file thực
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Thì viết lại URL
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>